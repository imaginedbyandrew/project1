<!DOCTYPE html>
<html>
	<head>
  	<title>Binger</title>
  	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  	<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  	<%= csrf_meta_tags %>
  	<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
	</head>

<body>
<div class="intellinav">
<%== intellinav %>
</div>

<!-- Container for Navigation Bar on left of page -->
<div class="nav">
	<div class="binger">
		<span>BINGER</span>
	</div>
	<div class="links">
		
		<p>
			<a href="<%= root_path %>"><i class="fa fa-home fa-3x"></i><br><br>MAIN MENU</a>
		</p>
		
		<p>
			<a href="<%= new_tvshow_path %>"><i class="fa fa-plus-square fa-3x"></i><br><br>ADD SHOW</a>
		</p>
		<% if @current_user.nil? %>
		<p>
			<a href="<%= new_user_path %>"><i class="fa fa-user fa-3x"></i><br><br>ADD USER</a>
	  </p>
		<% end %>
	  <p>
	  	<a href="<%= tvshows_path %>"><i class="fa fa-caret-square-o-right fa-3x"></i><br><br>ALL SHOWS</a>
		</p>
		<% if @current_user.present? %>
		<p>
			<a href="<%= user_path(@current_user) %>"><i class="fa fa-star fa-3x"></i><br><br>MY SHOWS</a>
		</p>
		<% end %>
		</div>
</div>


	<%= yield %>


</body>
</html>
